
<div class="container d-flex mt-5 movie-background my-4">
  <img class='movie-poster' src="<%= cl_image_path @movie.poster_url.key, height: 300, crop: :fill%>" alt="Card image cap">
  <div>
    <div class="d-flex justify-content-between mx-3">
      <h1><strong><%= @movie.title %></strong></h1>
      <strong><%= @movie.rating %></strong>
    </div>
    <p class='mx-3'><%= @movie.overview %></p>
    <p class='mx-3'><strong><%= link_to 'Edit movie', edit_movie_path(@movie) %> | <%= link_to 'Add a bookmark',  new_movie_bookmark_path(@movie), target: "_blank" %></strong></p>
  </div>
</div>
<p class='mx-5'><%= link_to 'Back to Movies', movies_path %> | <%= link_to 'Home', root_path %></p>
