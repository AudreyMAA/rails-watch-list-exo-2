<h1 class='text-center mt-5'><strong><%= @watchlist.name %></strong></h1>
<% if @watchlist.bookmarks.present? %>
  <p class="text-center my-4"><%= link_to 'Add a movie', movies_path %></p>
  <div class="row">
    <% @watchlist.bookmarks.each do |bookmark| %>
      <div class="col-2 col-m-4 mt-3">
        <div class="card" style="width: 12rem;">
          <img class="card-img-top" src="<%= bookmark.movie.poster_url%>" alt="Card image cap">
          <div class="card-body d-flex justify-content-between">
            <strong><%= bookmark.movie.title %></strong>
            <%= bookmark.movie.rating %>
          </div>
          <%= link_to 'Voir', movie_path(bookmark.movie), target: "_blank" %>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <p class="text-center my-4"><%= link_to 'Add a movie', movies_path %></p>
<% end %>

<p><%= link_to 'Back to Watchlists', watchlists_path %> | <%= link_to 'Home', root_path %></p>
