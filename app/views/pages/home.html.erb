
<div class="banner">
  <div class="container mt-5">
    <h1><strong>What's to Watch ?</strong></h1>
    <h4 class='col-3 mt-3'>Find and create watchlists from all kind of movies!</h4>
  </div>
  <%= link_to 'Create a Watchlist', watchlists_path, target: "_blank", class:"btn btn-primary" %>
</div>

<div class="mt-5 d-flex">
  <%= link_to 'Movies', movies_path,  target: "_blank" %>
  <%= link_to ' Watchlists', watchlists_path,  target: "_blank" %>
</div>

<div class="d-flex justify-content-between mt-5">
  <div class="row">
    <% @watchlists.sort.reverse.last(3) do |list| %>
      <div class="col-4 mt-3">
        <div class="card-category" style="background-image: url('<%= cl_image_path list.image.key, height: 300, crop: :fill %>')">
          <%= link_to"#{list.name}", watchlist_path(list),  target: "_blank" %>
       </div>
      </div>
    <% end %>
  </div>
</div>
